{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "globals": {
        "$": false,
        "jQuery": false,
        "_": false,
        "Backbone": false,
        "app": false,
        "mixins": false,
        "Urls": false
    },
    "rules": {
        // best practices
        "no-unexpected-multiline": "error",
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-array-constructor": "error",
        "no-new-object": "error",
        // variables
        "one-var": [
            "warn",
            "never"
        ],
        // style
        "no-tabs": "error",
        "brace-style": [
            "error",
            "1tbs",
            {
                "allowSingleLine": false
            }
        ],
        "space-before-blocks": "error",
        "keyword-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never"
            }
        ],
        "space-infix-ops": "error",
        "space-unary-ops": [
            "error",
            {
                "words": true,
                "nonwords": false
            }
        ],
        "newline-before-return": "warn",
        "newline-per-chained-call": [
            "error",
            {
                "ignoreChainWithDepth": 2
            }
        ],
        "camelcase": [
            "error",
            {
                "properties": "always"
            }
        ],
        "curly": [
            "error",
            "multi-line"
        ],
        "dot-notation": "error",
        "eol-last": "warn",
        "eqeqeq": [
            "warn",
            "smart"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1,
                "ignoreComments": true
            }
        ],
        "max-depth": [
            "error",
            4
        ],
        "max-len": [
            "error",
            120,
            {
                "ignoreTrailingComments": true,
                "ignoreUrls": true,
                "ignoreRegExpLiterals": true
            }
        ],
        "max-params": [
            "warn",
            4
        ],
        "no-caller": "error",
        "no-console": [
          "warn",
          {"allow": ["warn", "error"]}
        ],
        "no-empty": [
            "error",
            {"allowEmptyCatch": true}
        ],
        "no-mixed-spaces-and-tabs": "error",
        "no-multi-str": "error",
        "no-nested-ternary": "error",
        "no-new-func": "error",
        "no-new-wrappers": "error",
        "no-sequences": "error",
        "no-trailing-spaces": "error",
        "no-undef": "error",
        "no-unused-expressions": [
            "warn",
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "after-used"
            }
        ],
        "no-use-before-define": [
            "error",
            "nofunc"
        ],
        "no-with": "error",
        "padded-blocks": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
