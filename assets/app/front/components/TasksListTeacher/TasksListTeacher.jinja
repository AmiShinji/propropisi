                        {{ TaskTeacher(item, data.taskStatuses[item.status]) }}
                        {{ TaskTeacher(item, data.taskStatuses[item.status]) }}
                        {{ TaskTeacher(item, data.taskStatuses[item.status]) }}
                        {{ TaskTeacher(item, data.taskStatuses[item.status]) }}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endmacro %}
