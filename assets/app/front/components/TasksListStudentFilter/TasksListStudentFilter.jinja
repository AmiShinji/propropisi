{% from 'front/utils/macros.jinja' import  svgSprite %}

{% macro TasksListStudentFilter(data={}) %}
    <div class="TasksListStudentFilter">
        <div class="TasksListStudentFilter-wrapper">
            <div class="TasksListStudentFilter-text">Показать:</div>
            <div class="TasksListStudentFilter-select">
                <div class="TasksListStudentFilter-selectText" data-default="все">
                    <span>Все</span>
                </div>
                <div class="TasksListStudentFilter-selectMenu">
                    <label class="TasksListStudentFilter-selectMenuItem" data-id="0" for="cat-0">
                        <input type="checkbox" name="cat-0" id="cat-0" checked>
                        <div class="TasksListStudentFilter-selectMenuItemCheckbox">
                            {{ svgSprite('icon-checkbox') }}
                        </div>
                        <span>Выполнить</span>
                    </label>
                    <label class="TasksListStudentFilter-selectMenuItem" data-id="1" for="cat-1">
                        <input type="checkbox" name="cat-1" id="cat-1" checked>
                        <div class="TasksListStudentFilter-selectMenuItemCheckbox">
                            {{ svgSprite('icon-checkbox') }}
                        </div>
                        <span>На проверке</span>
                    </label>
                    <label class="TasksListStudentFilter-selectMenuItem" data-id="2" for="cat-2">
                        <input type="checkbox" name="cat-2" id="cat-2" checked>
                        <div class="TasksListStudentFilter-selectMenuItemCheckbox">
                            {{ svgSprite('icon-checkbox') }}
                        </div>
                        <span>Оцененные</span>
                    </label>
                    <label class="TasksListStudentFilter-selectMenuItem" data-id="3" for="cat-3">
                        <input type="checkbox" name="cat-3" id="cat-3" checked>
                        <div class="TasksListStudentFilter-selectMenuItemCheckbox">
                            {{ svgSprite('icon-checkbox') }}
                        </div>
                        <span>Просроченные</span>
                    </label>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}
